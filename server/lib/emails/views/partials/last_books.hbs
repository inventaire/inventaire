{{#if display}}
  {{> row_centered_top}}
    <h2 style="text-align: center;">{{{I18n lang title}}}</h2>
    {{#each highlighted}}
      <table width="300" align="center" padding="0" margin="0" bgcolor="#F5F5F5">
        {{#if item.pictures}}
          <tr>
            <td align="center">
              <a href="{{itemHref}}" title="{{item.title}}" style="text-decoration: none"><img src="{{imgSrc item.pictures 200}}" alt="{{item.title}}"></a>
            </td>
          </tr>
        {{/if}}
        <tr>
          <td>
            <a href="{{itemHref}}" title="{{item.title}}" style="text-decoration: none">
              <h3 style="margin: 0 auto; text-align: center; color:#2C9AB7; padding-bottom:0;">{{item.title}}</h3>
            </a>
          </td>
        </tr>
        {{#if item.authors}}
          <tr><td style="margin: 0 auto; text-align: center; color:#222222; text-decoration-color:#2C9AB7; padding-bottom: 0.5em;">{{item.authors}}</td></tr>
        {{/if}}
        <tr>
          <td>
            <table width="300">
              <tr>
                <td>
                  <a href="{{userHref}}" title="{{user.username}}">
                    {{! hacky aligning with the label}}
                    <img src="{{imgSrc user.picture 64}}" alt="{{user.username}}" height="64" width="64" style="margin-top: 4px;">
                  </a>
                </td>
                <td>
                  <a href="{{itemHref}}" title="{{item.title}}" style="color: white; text-decoration: none">
                    {{! hacky aligning with the picture}}
                    <table bgcolor="{{transactionColor}}" height="64" width="234">
                      <tr align="center">
                        <td>
                          {{{i18n item.userLang transactionLabel user}}}
                        </td>
                      </tr>
                    </table>
                  </a>
                </td>
              </tr>
            </table>
          {{#if user.distance}}
            <tr align="right" bgcolor="#ffffff">
              <td>
                {{!-- Passing `this` to give access to `distance` --}}
                <small style="color: #999999">{{i18n item.userLang 'km_away' this}}</small>
              </td>
            </tr>
          {{/if}}
      </table>

      <br />
    {{/each}}
    {{#if more.display}}
      {{{i18n lang more.title more}}}
    {{/if}}
  {{> row_centered_bottom}}
{{/if}}
