#!/usr/bin/env bash
export NODE_ENV=tests-integration

timeout=$(node -p 'require("config").mocha.timeout')

# If no test file is passed as argument, run all tests
if [ -z "$1" ]
then
  mocha --exit $MOCHA_OPTIONS --timeout "$timeout" ./tests/integration/*
else
  mocha --exit $MOCHA_OPTIONS --timeout "$timeout" "$@"
fi
