{
  "ts-node": {
    "swc": true,
    "esm": true
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      "#controllers/*": [
        "./server/controllers/*.js",
      ],
      "#data/*": [
        "./server/data/*.js",
      ],
      "#db/*": [
        "./server/db/*.js",
      ],
      "#fixtures/*": [
        "./tests/api/fixtures/*.js",
      ],
      "#i18nAssets/*": [
        "./inventaire-i18n/assets/*.js",
      ],
      "#lib/*": [
        "./server/lib/*.js",
      ],
      "#models/*": [
        "./server/models/*.js",
      ],
      "#scripts/*": [
        "./scripts/*.js",
      ],
      "#server/*": [
        "./server/*.js",
      ],
      "#tests/*": [
        "./tests/*.js",
      ],
      "#root/*": [
        "./*"
      ]
    }
  },
  "include": [
    "config/**/*",
    "server/**/*",
    "scripts/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "**/node_modules/*",
  ]
}
